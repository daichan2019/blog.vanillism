{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "vulnerabilityAlerts": { "enabled": true },
  "major": {
    "enabled": false
  },
  "packageRules": [
    {
      "automerge": true,
      "groupName": "dependencies",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    }
  ],
  "timezone": "Asia/Tokyo",
  "schedule": ["every weekend"]
}
